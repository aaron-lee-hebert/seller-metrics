@model MileageFormViewModel

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>@Model.FormTitle
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <!-- Trip Date -->
                        <div class="col-md-6">
                            <label asp-for="TripDate" class="form-label"></label>
                            <input asp-for="TripDate" type="date" class="form-control" />
                            <span asp-validation-for="TripDate" class="text-danger"></span>
                        </div>

                        <!-- Business Line -->
                        <div class="col-md-6">
                            <label asp-for="BusinessLine" class="form-label"></label>
                            <select asp-for="BusinessLine" class="form-select" required>
                                @foreach (var option in Model.BusinessLineOptions.Where(o => !string.IsNullOrEmpty(o.Value)))
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                            <span asp-validation-for="BusinessLine" class="text-danger"></span>
                        </div>

                        <!-- Business Purpose -->
                        <div class="col-12">
                            <label asp-for="Purpose" class="form-label"></label>
                            <input asp-for="Purpose" class="form-control" />
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>

                        <!-- Starting Location -->
                        <div class="col-md-6">
                            <label asp-for="StartLocation" class="form-label"></label>
                            <input asp-for="StartLocation" class="form-control" />
                            <span asp-validation-for="StartLocation" class="text-danger"></span>
                        </div>

                        <!-- Destination -->
                        <div class="col-md-6">
                            <label asp-for="Destination" class="form-label"></label>
                            <input asp-for="Destination" class="form-control" />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>

                        <!-- Miles -->
                        <div class="col-md-4">
                            <label asp-for="Miles" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Miles" type="number" step="0.1" min="0.1" class="form-control" id="milesInput" />
                                <span class="input-group-text">miles</span>
                            </div>
                            <span asp-validation-for="Miles" class="text-danger"></span>
                            <div class="form-text">One-way distance</div>
                        </div>

                        <!-- Round Trip -->
                        <div class="col-md-4">
                            <label class="form-label d-block">&nbsp;</label>
                            <div class="form-check form-switch mt-2">
                                <input asp-for="IsRoundTrip" class="form-check-input" id="roundTripSwitch" />
                                <label asp-for="IsRoundTrip" class="form-check-label">
                                    Round Trip (double miles)
                                </label>
                            </div>
                        </div>

                        <!-- Total Miles Display -->
                        <div class="col-md-4">
                            <label class="form-label">Total Miles</label>
                            <div class="bg-light p-2 rounded text-center">
                                <span class="fs-4 fw-bold text-primary" id="totalMilesDisplay">0.0</span>
                                <small class="text-muted ms-1">miles</small>
                            </div>
                        </div>

                        <!-- Odometer Readings (Optional) -->
                        <div class="col-12">
                            <hr class="my-2" />
                            <h6 class="text-muted mb-3">
                                <i class="bi bi-speedometer me-1"></i>Odometer Readings (Optional)
                            </h6>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="OdometerStart" class="form-label"></label>
                            <input asp-for="OdometerStart" type="number" class="form-control" />
                            <span asp-validation-for="OdometerStart" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="OdometerEnd" class="form-label"></label>
                            <input asp-for="OdometerEnd" type="number" class="form-control" />
                            <span asp-validation-for="OdometerEnd" class="text-danger"></span>
                        </div>

                        <!-- Notes -->
                        <div class="col-12">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>@Model.SubmitButtonText
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateTotalMiles() {
            const miles = parseFloat(document.getElementById('milesInput').value) || 0;
            const isRoundTrip = document.getElementById('roundTripSwitch').checked;
            const total = isRoundTrip ? miles * 2 : miles;
            document.getElementById('totalMilesDisplay').textContent = total.toFixed(1);
        }

        document.getElementById('milesInput').addEventListener('input', updateTotalMiles);
        document.getElementById('roundTripSwitch').addEventListener('change', updateTotalMiles);
        updateTotalMiles();
    </script>
}
