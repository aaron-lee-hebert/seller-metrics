@model MileageDetailViewModel

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Trip Summary Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-geo-alt me-2"></i>Trip Details
                </h5>
                <div class="btn-group btn-group-sm">
                    <a asp-action="Edit" asp-route-id="@Model.Entry.Id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Trip Date</label>
                        <p class="mb-0 fs-5">@Model.Entry.TripDate.ToString("dddd, MMMM d, yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-muted small">Business Line</label>
                        <p class="mb-0">
                            @{
                                var badgeClass = Model.Entry.BusinessLine switch
                                {
                                    BusinessLine.eBay => "bg-primary",
                                    BusinessLine.ComputerServices => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass fs-6">@Model.Entry.BusinessLineDisplay</span>
                        </p>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Route -->
                <h6 class="text-muted mb-3">
                    <i class="bi bi-signpost me-1"></i>Route
                </h6>
                <div class="bg-light rounded p-3 mb-4">
                    <div class="d-flex align-items-center">
                        <div class="text-center">
                            <i class="bi bi-geo-alt text-success fs-4"></i>
                            <small class="d-block text-muted">Start</small>
                        </div>
                        <div class="flex-grow-1 mx-3">
                            <div class="border-top border-2" style="border-style: dashed !important;"></div>
                        </div>
                        <div class="text-center">
                            <i class="bi bi-geo-alt-fill text-danger fs-4"></i>
                            <small class="d-block text-muted">End</small>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <strong>@Model.Entry.StartLocation</strong>
                        </div>
                        <div class="col text-end">
                            <strong>@Model.Entry.Destination</strong>
                        </div>
                    </div>
                </div>

                <!-- Business Purpose -->
                <h6 class="text-muted mb-2">
                    <i class="bi bi-briefcase me-1"></i>Business Purpose
                </h6>
                <p class="mb-4">@Model.Entry.Purpose</p>

                @if (!string.IsNullOrEmpty(Model.Entry.Notes))
                {
                    <h6 class="text-muted mb-2">
                        <i class="bi bi-sticky me-1"></i>Notes
                    </h6>
                    <p class="mb-4">@Model.Entry.Notes</p>
                }
            </div>
        </div>

        <!-- Mileage & Deduction Card -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-speedometer2 me-2"></i>Mileage & Tax Deduction
                </h5>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-4 text-center">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3 mb-2">
                            <i class="bi bi-speedometer text-primary fs-3"></i>
                        </div>
                        <h6 class="text-muted mb-1">One-Way Distance</h6>
                        <h4 class="mb-0">@Model.Entry.Miles.ToString("N1") mi</h4>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="bg-info bg-opacity-10 rounded-3 p-3 mb-2">
                            <i class="bi bi-arrow-left-right text-info fs-3"></i>
                        </div>
                        <h6 class="text-muted mb-1">Trip Type</h6>
                        <h4 class="mb-0">
                            @if (Model.Entry.IsRoundTrip)
                            {
                                <span class="badge bg-info">Round Trip</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">One Way</span>
                            }
                        </h4>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3 mb-2">
                            <i class="bi bi-speedometer2 text-success fs-3"></i>
                        </div>
                        <h6 class="text-muted mb-1">Total Miles</h6>
                        <h4 class="mb-0">@Model.Entry.TotalMiles.ToString("N1") mi</h4>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- Tax Deduction -->
                <div class="bg-success bg-opacity-10 rounded-3 p-4 text-center">
                    <h6 class="text-muted mb-2">Estimated Tax Deduction</h6>
                    <h2 class="text-success mb-2">@Model.EstimatedDeductionFormatted</h2>
                    <small class="text-muted">
                        @Model.Entry.TotalMiles.ToString("N1") miles x @(Model.ApplicableRate?.StandardRateFormatted ?? "$0.67/mile")
                        (@(Model.ApplicableRate?.Year ?? DateTime.Today.Year) IRS rate)
                    </small>
                </div>

                <!-- Odometer Readings -->
                @if (Model.Entry.OdometerStart.HasValue || Model.Entry.OdometerEnd.HasValue)
                {
                    <hr class="my-4" />
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-speedometer me-1"></i>Odometer Readings
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Start</label>
                            <p class="mb-0">@(Model.Entry.OdometerStart?.ToString("N0") ?? "Not recorded")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">End</label>
                            <p class="mb-0">@(Model.Entry.OdometerEnd?.ToString("N0") ?? "Not recorded")</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- IRS Requirements Info -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>IRS Record Keeping
                </h6>
            </div>
            <div class="card-body">
                <p class="text-muted mb-2 small">
                    This entry meets IRS requirements for mileage deduction documentation:
                </p>
                <ul class="list-unstyled mb-0 small">
                    <li class="mb-1">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Date:</strong> @Model.Entry.TripDate.ToString("MMM d, yyyy")
                    </li>
                    <li class="mb-1">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Business Purpose:</strong> @Model.Entry.Purpose
                    </li>
                    <li class="mb-1">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Starting Location:</strong> @Model.Entry.StartLocation
                    </li>
                    <li class="mb-1">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Destination:</strong> @Model.Entry.Destination
                    </li>
                    <li class="mb-1">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Miles Driven:</strong> @Model.Entry.TotalMiles.ToString("N1")
                    </li>
                </ul>
            </div>
        </div>

        <!-- Metadata -->
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row text-muted small">
                    <div class="col-md-6">
                        <i class="bi bi-clock me-1"></i>
                        Created: @Model.Entry.CreatedAt.ToString("MMM d, yyyy h:mm tt")
                    </div>
                    <div class="col-md-6 text-md-end">
                        @if (Model.Entry.UpdatedAt.HasValue)
                        {
                            <i class="bi bi-pencil me-1"></i>
                            <text>Updated: @Model.Entry.UpdatedAt.Value.ToString("MMM d, yyyy h:mm tt")</text>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back to Mileage Log
            </a>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this trip entry?</p>
                <p class="mb-0">
                    <strong>@Model.Entry.TripDate.ToString("MMM d, yyyy")</strong><br />
                    <small class="text-muted">@Model.Entry.StartLocation to @Model.Entry.Destination (@Model.Entry.TotalMiles.ToString("N1") mi)</small>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Entry.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Trip</button>
                </form>
            </div>
        </div>
    </div>
</div>
