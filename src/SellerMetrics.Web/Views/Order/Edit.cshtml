@model ManualOrderFormViewModel

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>@Model.FormTitle
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <!-- eBay Order ID -->
                        <div class="col-md-6">
                            <label asp-for="EbayOrderId" class="form-label"></label>
                            <input asp-for="EbayOrderId" class="form-control" />
                            <span asp-validation-for="EbayOrderId" class="text-danger"></span>
                        </div>

                        <!-- Transaction Date -->
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="form-label"></label>
                            <input asp-for="TransactionDate" type="date" class="form-control" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Gross Amount -->
                        <div class="col-md-4">
                            <label asp-for="GrossAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="GrossAmount" class="form-control money-input" />
                            </div>
                            <span asp-validation-for="GrossAmount" class="text-danger"></span>
                        </div>

                        <!-- Fees -->
                        <div class="col-md-3">
                            <label asp-for="FeesAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="FeesAmount" class="form-control money-input" />
                            </div>
                            <span asp-validation-for="FeesAmount" class="text-danger"></span>
                        </div>

                        <!-- Shipping -->
                        <div class="col-md-3">
                            <label asp-for="ShippingAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="ShippingAmount" class="form-control money-input" />
                            </div>
                            <span asp-validation-for="ShippingAmount" class="text-danger"></span>
                        </div>

                        <!-- Currency -->
                        <div class="col-md-2">
                            <label asp-for="Currency" class="form-label"></label>
                            <select asp-for="Currency" class="form-select">
                                <option value="USD">USD</option>
                                <option value="CAD">CAD</option>
                                <option value="GBP">GBP</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>

                        <!-- Net Amount Display -->
                        <div class="col-12">
                            <div class="bg-light p-3 rounded">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <small class="text-muted">Net Payout (calculated)</small>
                                    </div>
                                    <div class="col-auto">
                                        <span class="fs-5 fw-semibold text-success" id="netAmount">$0.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Linked Inventory Item -->
                        <div class="col-md-12">
                            <label asp-for="InventoryItemId" class="form-label"></label>
                            <select asp-for="InventoryItemId" class="form-select">
                                @foreach (var option in Model.InventoryOptions)
                                {
                                    <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                                }
                            </select>
                            <div class="form-text">Link to an inventory item for profit calculations</div>
                        </div>

                        <!-- Notes -->
                        <div class="col-12">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>@Model.SubmitButtonText
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function updateNetAmount() {
            const gross = parseFloat(document.getElementById('GrossAmount').value) || 0;
            const fees = parseFloat(document.getElementById('FeesAmount').value) || 0;
            const shipping = parseFloat(document.getElementById('ShippingAmount').value) || 0;
            const net = gross - fees - shipping;
            document.getElementById('netAmount').textContent = '$' + net.toFixed(2);
            document.getElementById('netAmount').className = net >= 0 ? 'fs-5 fw-semibold text-success' : 'fs-5 fw-semibold text-danger';
        }

        document.getElementById('GrossAmount').addEventListener('input', updateNetAmount);
        document.getElementById('FeesAmount').addEventListener('input', updateNetAmount);
        document.getElementById('ShippingAmount').addEventListener('input', updateNetAmount);
        updateNetAmount();
    </script>
}
