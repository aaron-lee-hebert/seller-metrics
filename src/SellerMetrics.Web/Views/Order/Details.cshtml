@model OrderDetailViewModel

<div class="row">
    <!-- Main Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-cart me-2"></i>Order Details
                </h5>
                <div class="btn-group">
                    @if (Model.Order.EntryType == RevenueEntryType.Manual)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Order.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <button type="button" class="btn btn-outline-danger btn-sm"
                                data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    }
                    else
                    {
                        <span class="badge bg-primary align-self-center">Synced from eBay</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Order ID</label>
                            <p class="mb-0 fw-semibold fs-5">@(Model.Order.EbayOrderId ?? $"#{Model.Order.Id}")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Transaction Date</label>
                            <p class="mb-0 fs-5">@Model.Order.TransactionDate.ToString("MMMM d, yyyy")</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Description</label>
                            <p class="mb-0 fs-5">@Model.Order.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Breakdown -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-calculator me-2"></i>Financial Breakdown
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="p-3 bg-light rounded text-center">
                            <small class="text-muted d-block">Gross Sale</small>
                            <span class="fs-4 fw-semibold">@Model.Order.GrossFormatted</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 bg-light rounded text-center">
                            <small class="text-muted d-block">eBay Fees</small>
                            <span class="fs-4 fw-semibold text-danger">-@Model.Order.FeesFormatted</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="p-3 bg-success bg-opacity-10 rounded text-center">
                            <small class="text-muted d-block">Net Payout</small>
                            <span class="fs-4 fw-bold text-success">@Model.Order.NetFormatted</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profit Calculation (if linked to inventory) -->
        @if (Model.HasCostData)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>Profit Calculation
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <small class="text-muted d-block">Net Payout</small>
                                <span class="fs-5 fw-semibold">@Model.Order.NetFormatted</span>
                            </div>
                        </div>
                        <div class="col-md-1 text-center">
                            <i class="bi bi-dash fs-4"></i>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <small class="text-muted d-block">Cost of Goods</small>
                                <span class="fs-5 fw-semibold">@Model.CostOfGoodsFormatted</span>
                            </div>
                        </div>
                        <div class="col-md-1 text-center">
                            <i class="bi bi-arrow-right fs-4"></i>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 @(Model.IsProfitable ? "bg-success" : "bg-danger") bg-opacity-10 rounded text-center">
                                <small class="text-muted d-block">Profit</small>
                                <span class="fs-4 fw-bold @(Model.IsProfitable ? "text-profit" : "text-loss")">
                                    @Model.ProfitFormatted
                                </span>
                                <small class="d-block @(Model.IsProfitable ? "text-success" : "text-danger")">
                                    @Model.ProfitMarginFormatted margin
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm mb-4 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle text-warning me-3 fs-4"></i>
                        <div>
                            <strong>Profit Calculation Unavailable</strong>
                            <p class="mb-0 small text-muted">
                                Link this order to an inventory item to calculate profit margins.
                            </p>
                        </div>
                        <a asp-action="Edit" asp-route-id="@Model.Order.Id" class="btn btn-outline-warning btn-sm ms-auto">
                            <i class="bi bi-link me-1"></i>Link Inventory
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Notes -->
        @if (!string.IsNullOrEmpty(Model.Order.Notes))
        {
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-sticky me-2"></i>Notes
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Order.Notes</p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Entry Info -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>Entry Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block">Entry Type</small>
                    @if (Model.Order.EntryType == RevenueEntryType.Manual)
                    {
                        <span class="badge bg-secondary">Manual Entry</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">eBay Synced</span>
                    }
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block">Created</small>
                    <span>@Model.Order.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                </div>
                @if (Model.Order.UpdatedAt.HasValue)
                {
                    <div class="mb-3">
                        <small class="text-muted d-block">Last Updated</small>
                        <span>@Model.Order.UpdatedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                    </div>
                }
                @if (Model.Order.LastSyncedAt.HasValue)
                {
                    <div>
                        <small class="text-muted d-block">Last Synced</small>
                        <span>@Model.Order.LastSyncedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                    </div>
                }
            </div>
        </div>

        <!-- Linked Inventory -->
        @if (Model.Order.InventoryItemId.HasValue)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i>Linked Inventory
                    </h6>
                </div>
                <div class="card-body">
                    <a asp-controller="Inventory" asp-action="Details" asp-route-id="@Model.Order.InventoryItemId"
                       class="text-decoration-none">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <strong>@(Model.Order.InventoryItemSku ?? "View Item")</strong>
                            </div>
                            <i class="bi bi-arrow-right"></i>
                        </div>
                    </a>
                </div>
            </div>
        }

        <!-- Quick Actions -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Orders
                    </a>
                    <a asp-controller="Report" asp-action="Quarterly" class="btn btn-outline-primary">
                        <i class="bi bi-file-earmark-bar-graph me-1"></i>View Quarterly Report
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this order?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Order.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
