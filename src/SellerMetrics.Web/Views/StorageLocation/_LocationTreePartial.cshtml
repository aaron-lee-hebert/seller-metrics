@model List<StorageLocationDto>

@foreach (var location in Model)
{
    <div class="tree-item" style="margin-left: @(location.Depth * 24)px;">
        <div class="d-flex align-items-center py-2 px-3 @(location.Depth == 0 ? "bg-light rounded mb-2" : "border-start border-2 mb-1")">
            <div class="flex-grow-1">
                @if (location.Children.Any())
                {
                    <i class="bi bi-folder2-open text-warning me-2"></i>
                }
                else
                {
                    <i class="bi bi-folder text-secondary me-2"></i>
                }
                <a asp-action="Details" asp-route-id="@location.Id" class="text-decoration-none fw-semibold">
                    @location.Name
                </a>
                @if (!string.IsNullOrEmpty(location.Description))
                {
                    <small class="text-muted ms-2">- @location.Description</small>
                }
            </div>
            <div class="btn-group btn-group-sm">
                <a asp-action="Create" asp-route-parentId="@location.Id" class="btn btn-outline-success btn-sm" title="Add child location">
                    <i class="bi bi-plus me-1"></i>Add
                </a>
                <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-outline-secondary btn-sm" title="Edit">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
            </div>
        </div>
        @if (location.Children.Any())
        {
            <partial name="_LocationTreePartial" model="location.Children" />
        }
    </div>
}
