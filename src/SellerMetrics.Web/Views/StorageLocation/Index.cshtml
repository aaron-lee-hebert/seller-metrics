@model StorageLocationListViewModel

<!-- Summary -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-folder text-primary fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Locations</h6>
                        <h4 class="mb-0">@Model.TotalLocations</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-success bg-opacity-10 rounded-3 p-3">
                            <i class="bi bi-diagram-3 text-success fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Root Locations</h6>
                        <h4 class="mb-0">@Model.TotalRootLocations</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="mb-0"><i class="bi bi-diagram-2 me-2"></i>Location Hierarchy</h5>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg me-1"></i>Add Root Location
    </a>
</div>

<!-- Tree View -->
<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model.Locations.Any())
        {
            <div class="location-tree">
                <partial name="_LocationTreePartial" model="Model.Locations" />
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-folder-x fs-1 d-block mb-3"></i>
                <p class="mb-3">No storage locations defined yet.</p>
                <a asp-action="Create" class="btn btn-outline-primary">
                    <i class="bi bi-plus-lg me-1"></i>Add Your First Location
                </a>
            </div>
        }
    </div>
</div>

<!-- Help Text -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-body">
        <h6 class="text-muted mb-3"><i class="bi bi-lightbulb me-2"></i>How to Use Storage Locations</h6>
        <p class="small text-muted mb-2">
            Storage locations help you organize and track where your inventory items and components are physically stored.
            Create a hierarchical structure that matches your actual storage setup.
        </p>
        <p class="small text-muted mb-0">
            <strong>Example structure:</strong> Garage > Shelf A > Bin 1, Garage > Shelf A > Bin 2, Office > Closet > Box 1
        </p>
    </div>
</div>
