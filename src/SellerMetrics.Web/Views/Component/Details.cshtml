@model ComponentDetailViewModel

<div class="row">
    <!-- Main Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-cpu me-2"></i>Component Details
                </h5>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Item.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <button type="button" class="btn btn-outline-danger btn-sm"
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Component Type</label>
                            <p class="mb-0 fw-semibold fs-5">@Model.Item.ComponentTypeName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Status</label>
                            <p class="mb-0">
                                @{
                                    var statusClass = Model.Item.Status switch
                                    {
                                        ComponentStatus.Available => "bg-success",
                                        ComponentStatus.Reserved => "bg-warning text-dark",
                                        ComponentStatus.Used => "bg-info",
                                        ComponentStatus.Sold => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass fs-6">@Model.Item.StatusDisplay</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Description</label>
                            <p class="mb-0 fs-5">@Model.Item.Description</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Quantity</label>
                            <p class="mb-0 fs-4 fw-bold">
                                @if (Model.Item.IsLowStock)
                                {
                                    <span class="text-warning">
                                        <i class="bi bi-exclamation-triangle me-1"></i>@Model.Item.Quantity
                                    </span>
                                    <span class="badge bg-warning text-dark ms-2">Low Stock</span>
                                }
                                else
                                {
                                    @Model.Item.Quantity
                                }
                            </p>
                            @if (Model.Item.LowStockThreshold.HasValue)
                            {
                                <small class="text-muted">Threshold: @Model.Item.LowStockThreshold</small>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Unit Cost</label>
                            <p class="mb-0 fs-5">@Model.Item.UnitCostFormatted</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Total Value</label>
                            <p class="mb-0 fs-5 fw-semibold text-primary">@Model.Item.TotalValueFormatted</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Source</label>
                            <p class="mb-0">@Model.Item.SourceDisplay</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Acquired Date</label>
                            <p class="mb-0">
                                @if (Model.Item.AcquiredDate.HasValue)
                                {
                                    @Model.Item.AcquiredDate.Value.ToString("MMMM d, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not Specified</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes Section -->
        @if (!string.IsNullOrEmpty(Model.Item.Notes))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-sticky me-2"></i>Notes
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Item.Notes</p>
                </div>
            </div>
        }

        <!-- Service Job Link -->
        @if (Model.Item.ServiceJobId.HasValue)
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-tools me-2"></i>Service Job
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">
                        This component is linked to service job:
                        <strong>@(Model.Item.ServiceJobNumber ?? $"#{Model.Item.ServiceJobId}")</strong>
                    </p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Quantity Adjustment Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-plus-slash-minus me-2"></i>Adjust Quantity
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="AdjustQuantity" asp-route-id="@Model.Item.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Current Quantity</label>
                        <p class="fs-4 fw-bold mb-0">@Model.Item.Quantity</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adjustment</label>
                        <div class="input-group">
                            <button type="button" class="btn btn-outline-danger" onclick="adjustQty(-1)">
                                <i class="bi bi-dash"></i>
                            </button>
                            <input type="number" name="adjustment" id="adjustmentInput" class="form-control text-center" value="0" />
                            <button type="button" class="btn btn-outline-success" onclick="adjustQty(1)">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                        <small class="text-muted">Use negative numbers to decrease</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason</label>
                        <select name="reason" class="form-select" required>
                            <option value="">Select reason...</option>
                            <option value="Restock - New purchase">Restock - New purchase</option>
                            <option value="Used in repair">Used in repair</option>
                            <option value="Sold separately">Sold separately</option>
                            <option value="Damaged/Defective">Damaged/Defective</option>
                            <option value="Inventory correction">Inventory correction</option>
                            <option value="Returned to stock">Returned to stock</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-circle me-1"></i>Apply Adjustment
                    </button>
                </form>
            </div>
        </div>

        <!-- Storage Location Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-geo-alt me-2"></i>Storage Location
                </h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Item.StorageLocationPath))
                {
                    <p class="mb-3">
                        <span class="badge bg-light text-dark fs-6">
                            <i class="bi bi-folder me-1"></i>@Model.Item.StorageLocationPath
                        </span>
                    </p>
                }
                else
                {
                    <p class="text-muted mb-3">No location assigned</p>
                }

                <!-- Move Component Form -->
                <form asp-action="Move" asp-route-id="@Model.Item.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-2">
                        <select name="newLocationId" class="form-select form-select-sm">
                            @foreach (var option in Model.LocationOptions)
                            {
                                <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle me-1"></i>Move Component
                    </button>
                </form>
            </div>
        </div>

        <!-- Timeline -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Timeline
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="d-flex mb-3">
                        <div class="me-3">
                            <span class="badge bg-primary rounded-pill"><i class="bi bi-plus"></i></span>
                        </div>
                        <div>
                            <strong>Added</strong>
                            <p class="text-muted mb-0 small">@Model.Item.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                        </div>
                    </li>
                    @if (Model.Item.UpdatedAt.HasValue)
                    {
                        <li class="d-flex">
                            <div class="me-3">
                                <span class="badge bg-secondary rounded-pill"><i class="bi bi-pencil"></i></span>
                            </div>
                            <div>
                                <strong>Last Updated</strong>
                                <p class="text-muted mb-0 small">@Model.Item.UpdatedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Component</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Item.Description</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Item.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function adjustQty(amount) {
            const input = document.getElementById('adjustmentInput');
            input.value = parseInt(input.value || 0) + amount;
        }
    </script>
}
