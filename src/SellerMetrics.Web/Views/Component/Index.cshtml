@model ComponentListViewModel

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Total Value</p>
                <h4 class="metric-value mb-0">@Model.Summary.TotalValueFormatted</h4>
                <small class="text-muted">@Model.Summary.TotalItems types</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Total Quantity</p>
                <h4 class="metric-value mb-0">@Model.Summary.TotalQuantity</h4>
                <small class="text-muted">units in stock</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm @(Model.Summary.LowStockCount > 0 ? "border-warning" : "")">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Low Stock</p>
                <h4 class="metric-value mb-0 @(Model.Summary.LowStockCount > 0 ? "text-warning" : "")">
                    @Model.Summary.LowStockCount
                </h4>
                <small class="text-muted">
                    @if (Model.Summary.LowStockCount > 0)
                    {
                        <a asp-action="Index" asp-route-filter="lowstock" class="text-warning">View low stock</a>
                    }
                    else
                    {
                        @:items need reordering
                    }
                </small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 shadow-sm d-flex justify-content-center align-items-center">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Component
            </a>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Type</label>
                <select name="type" class="form-select" onchange="this.form.submit()">
                    @foreach (var option in Model.TypeOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Location</label>
                <select name="location" class="form-select" onchange="this.form.submit()">
                    @foreach (var option in Model.LocationOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    @foreach (var option in Model.StatusOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                @if (Model.TypeFilter.HasValue || Model.LocationFilter.HasValue || Model.StatusFilter.HasValue || Model.ShowLowStockOnly)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-1"></i>Clear Filters
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Components Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-cpu me-2"></i>Components
            @if (Model.ShowLowStockOnly)
            {
                <span class="badge bg-warning text-dark ms-2">Low Stock Only</span>
            }
        </h5>
        <span class="text-muted small">
            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalItems
        </span>
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover data-table mb-0">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th class="text-center">Qty</th>
                            <th>Unit Cost</th>
                            <th>Total Value</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none fw-semibold">
                                        @item.ComponentTypeName
                                    </a>
                                </td>
                                <td class="text-truncate" style="max-width: 200px;" title="@item.Description">
                                    @item.Description
                                </td>
                                <td class="text-center">
                                    @if (item.IsLowStock)
                                    {
                                        <span class="badge bg-warning text-dark fs-6" title="Low stock (threshold: @item.LowStockThreshold)">
                                            <i class="bi bi-exclamation-triangle me-1"></i>@item.Quantity
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark fs-6">@item.Quantity</span>
                                    }
                                </td>
                                <td>@item.UnitCostFormatted</td>
                                <td class="fw-semibold">@item.TotalValueFormatted</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.StorageLocationPath))
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-geo-alt me-1"></i>@item.StorageLocationPath
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            ComponentStatus.Available => "bg-success",
                                            ComponentStatus.Reserved => "bg-warning text-dark",
                                            ComponentStatus.Used => "bg-info",
                                            ComponentStatus.Sold => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.StatusDisplay</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i><span class="d-none d-md-inline ms-1">View</span>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i><span class="d-none d-lg-inline ms-1">Edit</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Pagination.TotalPages > 1)
            {
                <partial name="_Pagination" model="Model.Pagination" />
            }
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-cpu"></i>
                </div>
                <p class="empty-state-title">No Components Found</p>
                <p class="empty-state-text">
                    @if (Model.TypeFilter.HasValue || Model.LocationFilter.HasValue || Model.StatusFilter.HasValue || Model.ShowLowStockOnly)
                    {
                        @:No components match your current filters.
                    }
                    else
                    {
                        @:Get started by adding your first component.
                    }
                </p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Component
                </a>
            </div>
        }
    </div>
</div>
