@model QuarterlyReportViewModel

@{
    var summary = Model.Summary;
    var profitClass = summary.NetProfit >= 0 ? "text-success" : "text-danger";
}

<!-- Header with Navigation -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">@summary.QuarterDisplay Summary</h4>
        <small class="text-muted">@summary.StartDate.ToString("MMMM d") - @summary.EndDate.ToString("MMMM d, yyyy")</small>
    </div>
    <form method="get" class="d-flex gap-2">
        <select name="year" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
            @foreach (var option in Model.YearOptions)
            {
                <option value="@option.Value" selected="@option.Selected">@option.Text</option>
            }
        </select>
        <select name="quarter" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
            @foreach (var option in Model.QuarterOptions)
            {
                <option value="@option.Value" selected="@option.Selected">@option.Text</option>
            }
        </select>
    </form>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white">
            <div class="card-body text-center">
                <h6 class="mb-1 opacity-75">Total Revenue</h6>
                <h3 class="mb-0">@summary.TotalRevenueFormatted</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-warning">
            <div class="card-body text-center">
                <h6 class="mb-1 opacity-75">Total Expenses</h6>
                <h3 class="mb-0">@summary.TotalExpensesFormatted</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-info text-white">
            <div class="card-body text-center">
                <h6 class="mb-1 opacity-75">Mileage Deduction</h6>
                <h3 class="mb-0">@summary.MileageDeductionFormatted</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 @(summary.NetProfit >= 0 ? "bg-success" : "bg-danger") text-white">
            <div class="card-body text-center">
                <h6 class="mb-1 opacity-75">Net Profit</h6>
                <h3 class="mb-0">@summary.NetProfitFormatted</h3>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Revenue Breakdown -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Revenue by Source</h6>
            </div>
            <div class="card-body">
                @if (summary.RevenueBySource.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Source</th>
                                    <th class="text-end">Gross</th>
                                    <th class="text-end">Fees</th>
                                    <th class="text-end">Net</th>
                                    <th class="text-center"># Trans</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var source in summary.RevenueBySource)
                                {
                                    <tr>
                                        <td>@source.SourceDisplay</td>
                                        <td class="text-end">@source.GrossRevenueFormatted</td>
                                        <td class="text-end text-danger">-@source.FeesFormatted</td>
                                        <td class="text-end">@source.NetRevenueFormatted</td>
                                        <td class="text-center">@source.TransactionCount</td>
                                    </tr>
                                }
                                <tr class="table-light fw-bold">
                                    <td>Total</td>
                                    <td class="text-end">@summary.TotalRevenueFormatted</td>
                                    <td colspan="3"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No revenue recorded for this quarter.</p>
                }
            </div>
        </div>
    </div>

    <!-- Mileage Summary -->
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="bi bi-car-front me-2"></i>Mileage Breakdown</h6>
            </div>
            <div class="card-body">
                @if (summary.MileageBreakdown != null)
                {
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="bg-light rounded p-3 text-center">
                                <h2 class="mb-0">@summary.TotalMiles.ToString("N1")</h2>
                                <small class="text-muted">Total Miles</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-success bg-opacity-10 rounded p-3 text-center">
                                <h2 class="mb-0 text-success">@summary.MileageDeductionFormatted</h2>
                                <small class="text-muted">Deduction (@summary.MileageBreakdown.ApplicableRateFormatted)</small>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row small">
                        <div class="col-4 text-center">
                            <span class="d-block text-muted">eBay</span>
                            <strong>@summary.MileageBreakdown.EbayMiles.ToString("N1") mi</strong>
                        </div>
                        <div class="col-4 text-center">
                            <span class="d-block text-muted">Services</span>
                            <strong>@summary.MileageBreakdown.ServiceMiles.ToString("N1") mi</strong>
                        </div>
                        <div class="col-4 text-center">
                            <span class="d-block text-muted">Shared</span>
                            <strong>@summary.MileageBreakdown.SharedMiles.ToString("N1") mi</strong>
                        </div>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No mileage recorded for this quarter.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Expenses by Category -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-header bg-white">
        <h6 class="mb-0"><i class="bi bi-receipt me-2"></i>Expenses by Schedule C Category</h6>
    </div>
    <div class="card-body">
        @if (summary.ExpensesByCategory.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Schedule C Line</th>
                            <th>Category</th>
                            <th class="text-center"># Entries</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in summary.ExpensesByCategory)
                        {
                            <tr>
                                <td>@category.ScheduleCLineLabel</td>
                                <td>@category.CategoryDisplay</td>
                                <td class="text-center">@category.ExpenseCount</td>
                                <td class="text-end">@category.TotalFormatted</td>
                            </tr>
                        }
                        <tr class="table-light fw-bold">
                            <td colspan="3">Total Expenses</td>
                            <td class="text-end">@summary.TotalExpensesFormatted</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">No expenses recorded for this quarter.</p>
        }
    </div>
</div>

<!-- Estimated Tax Payment Status -->
@if (summary.EstimatedTaxPayment != null)
{
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-bank me-2"></i>Estimated Tax Payment</h6>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <h6 class="text-muted mb-1">Due Date</h6>
                    <h5 class="mb-0">@summary.EstimatedTaxPayment.DueDateFormatted</h5>
                </div>
                <div class="col-md-3 text-center">
                    <h6 class="text-muted mb-1">Estimated Amount</h6>
                    <h5 class="mb-0">@summary.EstimatedTaxPayment.EstimatedAmountFormatted</h5>
                </div>
                <div class="col-md-3 text-center">
                    <h6 class="text-muted mb-1">Amount Paid</h6>
                    <h5 class="mb-0">@summary.EstimatedTaxPayment.AmountPaidFormatted</h5>
                </div>
                <div class="col-md-3 text-center">
                    <h6 class="text-muted mb-1">Status</h6>
                    @if (summary.EstimatedTaxPayment.IsPaid)
                    {
                        <span class="badge bg-success fs-6">Paid</span>
                    }
                    else if (summary.EstimatedTaxPayment.IsOverdue)
                    {
                        <span class="badge bg-danger fs-6">OVERDUE</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark fs-6">Pending</span>
                    }
                </div>
            </div>
        </div>
    </div>
}

<!-- Profit Calculation Summary -->
<div class="card border-0 shadow-sm mt-4">
    <div class="card-header bg-white">
        <h6 class="mb-0"><i class="bi bi-calculator me-2"></i>Profit Calculation</h6>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-borderless mb-0">
                    <tbody>
                        <tr>
                            <td class="ps-0">Gross Revenue</td>
                            <td class="text-end pe-0">@summary.TotalRevenueFormatted</td>
                        </tr>
                        <tr>
                            <td class="ps-0">Less: Business Expenses</td>
                            <td class="text-end pe-0 text-danger">-@summary.TotalExpensesFormatted</td>
                        </tr>
                        <tr>
                            <td class="ps-0">Less: Mileage Deduction</td>
                            <td class="text-end pe-0 text-danger">-@summary.MileageDeductionFormatted</td>
                        </tr>
                        <tr class="border-top">
                            <td class="ps-0 fw-bold">Net Profit / (Loss)</td>
                            <td class="text-end pe-0 fw-bold @profitClass">@summary.NetProfitFormatted</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Navigation -->
<div class="d-flex justify-content-between mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Reports
    </a>
    <a asp-action="Annual" asp-route-year="@Model.Year" class="btn btn-primary">
        View Full Year <i class="bi bi-arrow-right ms-1"></i>
    </a>
</div>
