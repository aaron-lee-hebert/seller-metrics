@model InventoryListViewModel

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Total Value</p>
                <h4 class="metric-value mb-0">@Model.Summary.TotalValueFormatted</h4>
                <small class="text-muted">@Model.Summary.TotalItems items</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Unlisted</p>
                <h4 class="metric-value mb-0">@Model.Summary.UnlistedCount</h4>
                <small class="text-muted">Ready to list</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Listed</p>
                <h4 class="metric-value mb-0">@Model.Summary.ListedCount</h4>
                <small class="text-muted">Active on eBay</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card h-100 shadow-sm d-flex justify-content-center align-items-center">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Item
            </a>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    @foreach (var option in Model.StatusOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Location</label>
                <select name="location" class="form-select" onchange="this.form.submit()">
                    @foreach (var option in Model.LocationOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="SKU, title, or notes..."
                           value="@Model.SearchTerm" />
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-2">
                @if (Model.StatusFilter.HasValue || Model.LocationFilter.HasValue || !string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle me-1"></i>Clear
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Items Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-box-seam me-2"></i>Inventory Items
        </h5>
        <span class="text-muted small">
            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalItems
        </span>
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover data-table mb-0">
                    <thead>
                        <tr>
                            <th>SKU</th>
                            <th>Title</th>
                            <th>COGS</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Purchase Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none fw-semibold">
                                        @item.EffectiveSku
                                    </a>
                                </td>
                                <td class="text-truncate" style="max-width: 250px;" title="@item.Title">
                                    @item.Title
                                </td>
                                <td>@item.CogsFormatted</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.StorageLocationPath))
                                    {
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-geo-alt me-1"></i>@item.StorageLocationPath
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status switch
                                        {
                                            InventoryStatus.Listed => "bg-success",
                                            InventoryStatus.Sold => "bg-info",
                                            InventoryStatus.Unlisted => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@item.StatusDisplay</span>
                                </td>
                                <td>
                                    @if (item.PurchaseDate.HasValue)
                                    {
                                        @item.PurchaseDate.Value.ToString("MMM d, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i><span class="d-none d-md-inline ms-1">View</span>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i><span class="d-none d-lg-inline ms-1">Edit</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Pagination.TotalPages > 1)
            {
                <partial name="_Pagination" model="Model.Pagination" />
            }
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <p class="empty-state-title">No Inventory Items Found</p>
                <p class="empty-state-text">
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.StatusFilter.HasValue || Model.LocationFilter.HasValue)
                    {
                        @:No items match your current filters. Try adjusting your search criteria.
                    }
                    else
                    {
                        @:Get started by adding your first inventory item.
                    }
                </p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Inventory Item
                </a>
            </div>
        }
    </div>
</div>
