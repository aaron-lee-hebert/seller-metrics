@model InventoryDetailViewModel

<div class="row">
    <!-- Main Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-box-seam me-2"></i>Item Details
                </h5>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Item.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    @if (Model.Item.Status != InventoryStatus.Sold)
                    {
                        <form asp-action="MarkAsSold" asp-route-id="@Model.Item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-success btn-sm"
                                    onclick="return confirm('Mark this item as sold?');">
                                <i class="bi bi-check-circle me-1"></i>Mark Sold
                            </button>
                        </form>
                    }
                    <button type="button" class="btn btn-outline-danger btn-sm"
                            data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">SKU</label>
                            <p class="mb-0 fw-semibold fs-5">@Model.Item.EffectiveSku</p>
                            @if (!string.IsNullOrEmpty(Model.Item.EbaySku) && Model.Item.EbaySku != Model.Item.InternalSku)
                            {
                                <small class="text-muted">Internal: @Model.Item.InternalSku</small>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Status</label>
                            <p class="mb-0">
                                @{
                                    var statusClass = Model.Item.Status switch
                                    {
                                        InventoryStatus.Listed => "bg-success",
                                        InventoryStatus.Sold => "bg-info",
                                        InventoryStatus.Unlisted => "bg-secondary",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass fs-6">@Model.Item.StatusDisplay</span>
                            </p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Title</label>
                            <p class="mb-0 fs-5">@Model.Item.Title</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Item.Description))
                    {
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label text-muted small">Description</label>
                                <p class="mb-0">@Model.Item.Description</p>
                            </div>
                        </div>
                    }
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Cost (COGS)</label>
                            <p class="mb-0 fs-5 fw-semibold">@Model.Item.CogsFormatted</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Condition</label>
                            <p class="mb-0">@(Model.Item.ConditionDisplay ?? "Not Specified")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Purchase Date</label>
                            <p class="mb-0">
                                @if (Model.Item.PurchaseDate.HasValue)
                                {
                                    @Model.Item.PurchaseDate.Value.ToString("MMMM d, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Not Specified</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes Section -->
        @if (!string.IsNullOrEmpty(Model.Item.Notes))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-sticky me-2"></i>Notes
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Item.Notes</p>
                </div>
            </div>
        }

        <!-- Timeline -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>Timeline
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="d-flex mb-3">
                        <div class="me-3">
                            <span class="badge bg-primary rounded-pill"><i class="bi bi-plus"></i></span>
                        </div>
                        <div>
                            <strong>Created</strong>
                            <p class="text-muted mb-0 small">@Model.Item.CreatedAt.ToString("MMMM d, yyyy 'at' h:mm tt")</p>
                        </div>
                    </li>
                    @if (Model.Item.ListedDate.HasValue)
                    {
                        <li class="d-flex mb-3">
                            <div class="me-3">
                                <span class="badge bg-success rounded-pill"><i class="bi bi-tag"></i></span>
                            </div>
                            <div>
                                <strong>Listed on eBay</strong>
                                <p class="text-muted mb-0 small">@Model.Item.ListedDate.Value.ToString("MMMM d, yyyy 'at' h:mm tt")</p>
                            </div>
                        </li>
                    }
                    @if (Model.Item.SoldDate.HasValue)
                    {
                        <li class="d-flex mb-3">
                            <div class="me-3">
                                <span class="badge bg-info rounded-pill"><i class="bi bi-check-circle"></i></span>
                            </div>
                            <div>
                                <strong>Sold</strong>
                                <p class="text-muted mb-0 small">@Model.Item.SoldDate.Value.ToString("MMMM d, yyyy 'at' h:mm tt")</p>
                            </div>
                        </li>
                    }
                    @if (Model.Item.UpdatedAt.HasValue)
                    {
                        <li class="d-flex">
                            <div class="me-3">
                                <span class="badge bg-secondary rounded-pill"><i class="bi bi-pencil"></i></span>
                            </div>
                            <div>
                                <strong>Last Updated</strong>
                                <p class="text-muted mb-0 small">@Model.Item.UpdatedAt.Value.ToString("MMMM d, yyyy 'at' h:mm tt")</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Storage Location Card -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-geo-alt me-2"></i>Storage Location
                </h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Item.StorageLocationPath))
                {
                    <p class="mb-3">
                        <span class="badge bg-light text-dark fs-6">
                            <i class="bi bi-folder me-1"></i>@Model.Item.StorageLocationPath
                        </span>
                    </p>
                }
                else
                {
                    <p class="text-muted mb-3">No location assigned</p>
                }

                <!-- Move Item Form -->
                <form asp-action="Move" asp-route-id="@Model.Item.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-2">
                        <select name="newLocationId" class="form-select form-select-sm">
                            @foreach (var option in Model.LocationOptions)
                            {
                                <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                        <i class="bi bi-arrow-right-circle me-1"></i>Move Item
                    </button>
                </form>
            </div>
        </div>

        <!-- eBay Information -->
        @if (!string.IsNullOrEmpty(Model.Item.EbayListingId) || !string.IsNullOrEmpty(Model.Item.EbaySku))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-cart me-2"></i>eBay Information
                    </h6>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Item.EbaySku))
                    {
                        <div class="mb-2">
                            <small class="text-muted">eBay SKU</small>
                            <p class="mb-0 fw-semibold">@Model.Item.EbaySku</p>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Item.EbayListingId))
                    {
                        <div class="mb-2">
                            <small class="text-muted">Listing ID</small>
                            <p class="mb-0">
                                <a href="https://www.ebay.com/itm/@Model.Item.EbayListingId" target="_blank" class="text-decoration-none">
                                    @Model.Item.EbayListingId <i class="bi bi-box-arrow-up-right small"></i>
                                </a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Photo -->
        @if (!string.IsNullOrEmpty(Model.Item.PhotoPath))
        {
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-image me-2"></i>Photo
                    </h6>
                </div>
                <div class="card-body p-2">
                    <img src="@Model.Item.PhotoPath" alt="@Model.Item.Title" class="img-fluid rounded" />
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Inventory Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Item.Title</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Item.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
