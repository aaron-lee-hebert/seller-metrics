@model InvoiceDetailViewModel

<div class="row">
    <!-- Main Details -->
    <div class="col-lg-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-receipt me-2"></i>Invoice Details
                </h5>
                <div class="btn-group">
                    @if (Model.Invoice.EntryType == RevenueEntryType.Manual)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Invoice.Id" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </a>
                        <button type="button" class="btn btn-outline-danger btn-sm"
                                data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-1"></i>Delete
                        </button>
                    }
                    else
                    {
                        <span class="badge bg-primary align-self-center">Synced from Wave</span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Invoice Number</label>
                            <p class="mb-0 fw-semibold fs-5">@(Model.Invoice.WaveInvoiceNumber ?? $"#{Model.Invoice.Id}")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Invoice Date</label>
                            <p class="mb-0 fs-5">@Model.Invoice.TransactionDate.ToString("MMMM d, yyyy")</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="mb-3">
                            <label class="form-label text-muted small">Customer / Description</label>
                            <p class="mb-0 fs-5">@Model.Invoice.Description</p>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="p-4 bg-success bg-opacity-10 rounded text-center">
                            <small class="text-muted d-block mb-2">Invoice Amount</small>
                            <span class="fs-2 fw-bold text-success">@Model.Invoice.GrossFormatted</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notes -->
        @if (!string.IsNullOrEmpty(Model.Invoice.Notes))
        {
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0">
                        <i class="bi bi-sticky me-2"></i>Notes
                    </h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Invoice.Notes</p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Entry Info -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle me-2"></i>Entry Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted d-block">Entry Type</small>
                    @if (Model.Invoice.EntryType == RevenueEntryType.Manual)
                    {
                        <span class="badge bg-secondary">Manual Entry</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">Wave Synced</span>
                    }
                </div>
                <div class="mb-3">
                    <small class="text-muted d-block">Created</small>
                    <span>@Model.Invoice.CreatedAt.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                </div>
                @if (Model.Invoice.UpdatedAt.HasValue)
                {
                    <div class="mb-3">
                        <small class="text-muted d-block">Last Updated</small>
                        <span>@Model.Invoice.UpdatedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                    </div>
                }
                @if (Model.Invoice.LastSyncedAt.HasValue)
                {
                    <div>
                        <small class="text-muted d-block">Last Synced</small>
                        <span>@Model.Invoice.LastSyncedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</span>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h6 class="mb-0">
                    <i class="bi bi-lightning me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to Invoices
                    </a>
                    <a asp-action="Create" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle me-1"></i>Add New Invoice
                    </a>
                    <a asp-controller="Report" asp-action="Quarterly" class="btn btn-outline-primary">
                        <i class="bi bi-file-earmark-bar-graph me-1"></i>View Quarterly Report
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Invoice</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this invoice?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Invoice.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
