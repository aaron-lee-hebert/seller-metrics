@model InvoiceListViewModel

<!-- Sync Status Banner -->
@if (!Model.IsWaveSyncConfigured)
{
    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-info-circle me-2 fs-5"></i>
        <div class="flex-grow-1">
            <strong>Wave API Not Connected</strong>
            <p class="mb-0 small">Invoices are being entered manually. Connect your Wave account to automatically sync invoices.</p>
        </div>
        <a href="#" class="btn btn-outline-info btn-sm disabled">
            <i class="bi bi-link me-1"></i>Configure Wave API
        </a>
    </div>
}

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Total Invoices</p>
                <h4 class="metric-value mb-0">@Model.Summary.TotalInvoices</h4>
                <small class="text-muted">in selected period</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card metric-card h-100 shadow-sm">
            <div class="card-body">
                <p class="metric-label text-muted mb-1">Total Revenue</p>
                <h4 class="metric-value mb-0 text-success">@Model.Summary.TotalRevenueFormatted</h4>
                <small class="text-muted">service income</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100 shadow-sm d-flex justify-content-center align-items-center">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add Invoice
            </a>
        </div>
    </div>
</div>

<!-- Date Filter -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control"
                       value="@Model.StartDate?.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control"
                       value="@Model.EndDate?.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
            </div>
            @{
                var last30DaysStart = DateTime.Today.AddDays(-30).ToString("yyyy-MM-dd");
                var today = DateTime.Today.ToString("yyyy-MM-dd");
                var quarterStart = new DateTime(DateTime.Today.Year, ((DateTime.Today.Month - 1) / 3) * 3 + 1, 1).ToString("yyyy-MM-dd");
            }
            <div class="col-md-4">
                <div class="btn-group">
                    <a asp-action="Index" asp-route-startDate="@last30DaysStart" asp-route-endDate="@today"
                       class="btn btn-outline-secondary">Last 30 Days</a>
                    <a asp-action="Index" asp-route-startDate="@quarterStart" asp-route-endDate="@today"
                       class="btn btn-outline-secondary">This Quarter</a>
                </div>
            </div>
            <div class="col-md-2">
                <!-- Spacer -->
            </div>
        </form>
    </div>
</div>

<!-- Invoices Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-receipt me-2"></i>Service Invoices
        </h5>
        <span class="text-muted small">
            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalItems
        </span>
    </div>
    <div class="card-body p-0">
        @if (Model.Invoices.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover data-table mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Invoice #</th>
                            <th>Customer/Description</th>
                            <th class="text-end">Amount</th>
                            <th>Type</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td>@invoice.TransactionDate.ToString("MMM d, yyyy")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@invoice.Id" class="text-decoration-none fw-semibold">
                                        @(invoice.WaveInvoiceNumber ?? $"#{invoice.Id}")
                                    </a>
                                </td>
                                <td class="text-truncate" style="max-width: 250px;" title="@invoice.Description">
                                    @invoice.Description
                                </td>
                                <td class="text-end fw-semibold text-success">@invoice.GrossFormatted</td>
                                <td>
                                    @if (invoice.EntryType == RevenueEntryType.Manual)
                                    {
                                        <span class="badge bg-secondary">Manual</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Synced</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-outline-primary" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (invoice.EntryType == RevenueEntryType.Manual)
                                        {
                                            <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Pagination.TotalPages > 1)
            {
                <partial name="_Pagination" model="Model.Pagination" />
            }
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-receipt"></i>
                </div>
                <p class="empty-state-title">No Invoices Found</p>
                <p class="empty-state-text">
                    No service invoices found for the selected date range.
                </p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add Invoice
                </a>
            </div>
        }
    </div>
</div>
