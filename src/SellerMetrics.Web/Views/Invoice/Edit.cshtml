@model ManualInvoiceFormViewModel

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="bi bi-pencil me-2"></i>@Model.FormTitle
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <!-- Invoice Number -->
                        <div class="col-md-6">
                            <label asp-for="WaveInvoiceNumber" class="form-label"></label>
                            <input asp-for="WaveInvoiceNumber" class="form-control" />
                            <span asp-validation-for="WaveInvoiceNumber" class="text-danger"></span>
                        </div>

                        <!-- Invoice Date -->
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="form-label"></label>
                            <input asp-for="TransactionDate" type="date" class="form-control" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="col-12">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Amount -->
                        <div class="col-md-8">
                            <label asp-for="GrossAmount" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="GrossAmount" class="form-control money-input" />
                            </div>
                            <span asp-validation-for="GrossAmount" class="text-danger"></span>
                        </div>

                        <!-- Currency -->
                        <div class="col-md-4">
                            <label asp-for="Currency" class="form-label"></label>
                            <select asp-for="Currency" class="form-select">
                                <option value="USD">USD</option>
                                <option value="CAD">CAD</option>
                                <option value="GBP">GBP</option>
                                <option value="EUR">EUR</option>
                            </select>
                        </div>

                        <!-- Notes -->
                        <div class="col-12">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>@Model.SubmitButtonText
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
