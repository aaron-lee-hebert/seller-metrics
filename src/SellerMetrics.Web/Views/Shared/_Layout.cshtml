@inject Microsoft.AspNetCore.Identity.SignInManager<SellerMetrics.Domain.Entities.ApplicationUser> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<SellerMetrics.Domain.Entities.ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SellerMetrics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SellerMetrics.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="d-flex" id="wrapper">
            <!-- Sidebar -->
            <div class="sidebar border-end bg-white" id="sidebar-wrapper">
                <div class="sidebar-heading border-bottom bg-light py-3 px-3">
                    <a class="text-decoration-none text-dark fw-bold" asp-controller="Home" asp-action="Index" title="SellerMetrics">
                        <i class="bi bi-graph-up-arrow me-2"></i><span>SellerMetrics</span>
                    </a>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Home" asp-action="Index"
                       class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                       title="Dashboard">
                        <i class="bi bi-speedometer2 me-2"></i><span>Dashboard</span>
                    </a>

                    <!-- Inventory Section -->
                    <div class="sidebar-section">
                        <small class="text-muted px-3 py-2 d-block text-uppercase fw-semibold">Inventory</small>
                        <a asp-controller="Inventory" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Inventory" ? "active" : "")"
                           title="eBay Items">
                            <i class="bi bi-box-seam me-2"></i><span>eBay Items</span>
                        </a>
                        <a asp-controller="Component" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Component" ? "active" : "")"
                           title="Repair Parts">
                            <i class="bi bi-cpu me-2"></i><span>Repair Parts</span>
                        </a>
                        <a asp-controller="StorageLocation" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "StorageLocation" ? "active" : "")"
                           title="Storage Locations">
                            <i class="bi bi-geo-alt me-2"></i><span>Storage Locations</span>
                        </a>
                    </div>

                    <!-- Sales Section -->
                    <div class="sidebar-section">
                        <small class="text-muted px-3 py-2 d-block text-uppercase fw-semibold">Sales</small>
                        <a asp-controller="Order" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")"
                           title="eBay Orders">
                            <i class="bi bi-cart-check me-2"></i><span>eBay Orders</span>
                        </a>
                        <a asp-controller="Invoice" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Invoice" ? "active" : "")"
                           title="Service Invoices">
                            <i class="bi bi-file-earmark-text me-2"></i><span>Service Invoices</span>
                        </a>
                    </div>

                    <!-- Financial Section -->
                    <div class="sidebar-section">
                        <small class="text-muted px-3 py-2 d-block text-uppercase fw-semibold">Financial</small>
                        <a asp-controller="Expense" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Expense" ? "active" : "")"
                           title="Expenses">
                            <i class="bi bi-receipt me-2"></i><span>Expenses</span>
                        </a>
                        <a asp-controller="Mileage" asp-action="Index"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Mileage" ? "active" : "")"
                           title="Mileage Log">
                            <i class="bi bi-car-front me-2"></i><span>Mileage Log</span>
                        </a>
                    </div>

                    <!-- Reports Section -->
                    <div class="sidebar-section">
                        <small class="text-muted px-3 py-2 d-block text-uppercase fw-semibold">Reports</small>
                        <a asp-controller="Report" asp-action="Quarterly"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" && ViewContext.RouteData.Values["action"]?.ToString() == "Quarterly" ? "active" : "")"
                           title="Quarterly Summary">
                            <i class="bi bi-calendar3 me-2"></i><span>Quarterly Summary</span>
                        </a>
                        <a asp-controller="Report" asp-action="Annual"
                           class="list-group-item list-group-item-action list-group-item-light p-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" && ViewContext.RouteData.Values["action"]?.ToString() == "Annual" ? "active" : "")"
                           title="Annual Summary">
                            <i class="bi bi-calendar-range me-2"></i><span>Annual Summary</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            <div id="page-content-wrapper" class="flex-grow-1">
                <!-- Top Navigation -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-3">
                    <div class="container-fluid">
                        <button class="btn btn-link text-dark" id="sidebarToggle">
                            <i class="bi bi-list fs-4"></i>
                        </button>

                        <div class="d-flex align-items-center ms-auto">
                            <!-- User Menu -->
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </nav>

                <!-- Main Content -->
                <div class="container-fluid py-4">
                    <!-- Breadcrumb (optional) -->
                    @if (ViewData["Breadcrumb"] != null)
                    {
                        <nav aria-label="breadcrumb" class="mb-3">
                            <ol class="breadcrumb">
                                @Html.Raw(ViewData["Breadcrumb"])
                            </ol>
                        </nav>
                    }

                    <!-- Page Title -->
                    @if (ViewData["Title"] != null)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                            @await RenderSectionAsync("PageActions", required: false)
                        </div>
                    }

                    <!-- Alerts Section -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>@TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <main role="main">
                        @RenderBody()
                    </main>
                </div>

                <!-- Footer -->
                <footer class="border-top text-muted py-3 px-4 mt-auto">
                    <div class="d-flex justify-content-between align-items-center">
                        <span>&copy; @DateTime.Now.Year SellerMetrics</span>
                        <a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
                    </div>
                </footer>
            </div>
        </div>
    }
    else
    {
        <!-- Non-authenticated layout -->
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
                <div class="container">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-graph-up-arrow me-2"></i>SellerMetrics
                    </a>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container py-4">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top text-muted py-3">
            <div class="container text-center">
                &copy; @DateTime.Now.Year SellerMetrics - <a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
            </div>
        </footer>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
