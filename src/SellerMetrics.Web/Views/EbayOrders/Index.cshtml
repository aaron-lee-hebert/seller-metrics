@model EbayOrderListViewModel
@using SellerMetrics.Domain.Enums

<!-- Connection Status and Summary -->
<div class="row g-3 mb-4">
    <!-- Connection Status -->
    <div class="col-md-4">
        <div class="card h-100 shadow-sm @(Model.ConnectionStatus?.IsConnected == true ? "border-success" : "border-warning")">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="metric-label text-muted mb-1">eBay Connection</p>
                        @if (Model.ConnectionStatus?.IsConnected == true)
                        {
                            <h5 class="text-success mb-1">
                                <i class="bi bi-check-circle-fill me-1"></i>Connected
                            </h5>
                            <small class="text-muted">@Model.ConnectionStatus.EbayUsername</small>
                            @if (Model.ConnectionStatus.LastSyncedAt.HasValue)
                            {
                                <br /><small class="text-muted">Last sync: @Model.ConnectionStatus.LastSyncedAt.Value.ToString("MMM d, yyyy h:mm tt")</small>
                            }
                        }
                        else
                        {
                            <h5 class="text-warning mb-1">
                                <i class="bi bi-exclamation-triangle-fill me-1"></i>Not Connected
                            </h5>
                            <small class="text-muted">Connect in <a asp-controller="Settings" asp-action="Index">Settings</a></small>
                        }
                    </div>
                    @if (Model.ConnectionStatus?.IsConnected == true)
                    {
                        <form asp-action="SyncNow" method="post">
                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-arrow-clockwise me-1"></i>Sync Now
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    @if (Model.Stats != null)
    {
        <div class="col-md-2">
            <div class="card metric-card h-100 shadow-sm">
                <div class="card-body">
                    <p class="metric-label text-muted mb-1">Orders</p>
                    <h4 class="metric-value mb-0">@Model.Stats.TotalOrders</h4>
                    <small class="text-muted">@Model.Stats.LinkedOrders linked</small>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card metric-card h-100 shadow-sm">
                <div class="card-body">
                    <p class="metric-label text-muted mb-1">Gross Sales</p>
                    <h4 class="metric-value mb-0">@Model.Stats.TotalGrossSalesFormatted</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card metric-card h-100 shadow-sm">
                <div class="card-body">
                    <p class="metric-label text-muted mb-1">Net Payout</p>
                    <h4 class="metric-value mb-0">@Model.Stats.TotalNetPayoutFormatted</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card metric-card h-100 shadow-sm">
                <div class="card-body">
                    <p class="metric-label text-muted mb-1">Profit</p>
                    <h4 class="metric-value mb-0 @(Model.Stats.TotalProfit >= 0 ? "text-success" : "text-danger")">
                        @Model.Stats.TotalProfitFormatted
                    </h4>
                </div>
            </div>
        </div>
    }
</div>

<!-- Filters -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">Start Date</label>
                <input type="date" name="startDate" class="form-control"
                       value="@Model.StartDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">End Date</label>
                <input type="date" name="endDate" class="form-control"
                       value="@Model.EndDate.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    @foreach (var option in Model.StatusOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Inventory Link</label>
                <select name="linkedOnly" class="form-select">
                    @foreach (var option in Model.LinkedOnlyOptions)
                    {
                        <option value="@option.Value" selected="@option.Selected">@option.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel me-1"></i>Filter
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-x-circle me-1"></i>Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Orders Table -->
<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-cart me-2"></i>eBay Orders
        </h5>
        <span class="text-muted small">
            Showing @Model.Pagination.StartItem - @Model.Pagination.EndItem of @Model.Pagination.TotalItems
        </span>
    </div>
    <div class="card-body p-0">
        @if (Model.Orders.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover data-table mb-0">
                    <thead>
                        <tr>
                            <th>Order Date</th>
                            <th>Order ID</th>
                            <th>Item</th>
                            <th>Buyer</th>
                            <th>Gross Sale</th>
                            <th>Net Payout</th>
                            <th>Profit</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderDate.ToString("MMM d, yyyy")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none fw-semibold">
                                        @order.EbayOrderId.Substring(0, Math.Min(order.EbayOrderId.Length, 12))...
                                    </a>
                                </td>
                                <td class="text-truncate" style="max-width: 200px;" title="@order.ItemTitle">
                                    @order.ItemTitle
                                </td>
                                <td>@order.BuyerUsername</td>
                                <td>@order.GrossSaleFormatted</td>
                                <td>@order.NetPayoutFormatted</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(order.ProfitFormatted))
                                    {
                                        <span class="@(order.ProfitFormatted.StartsWith("-") ? "text-danger" : "text-success")">
                                            @order.ProfitFormatted
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            EbayOrderStatus.Active => "bg-primary",
                                            EbayOrderStatus.Completed => "bg-success",
                                            EbayOrderStatus.Cancelled => "bg-danger",
                                            EbayOrderStatus.Inactive => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.StatusDisplay</span>
                                    @if (!order.IsLinkedToInventory)
                                    {
                                        <span class="badge bg-warning text-dark ms-1" title="Not linked to inventory">
                                            <i class="bi bi-link-45deg"></i>
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (Model.Pagination.TotalPages > 1)
            {
                <partial name="_Pagination" model="Model.Pagination" />
            }
        }
        else
        {
            <div class="empty-state py-5">
                <div class="empty-state-icon">
                    <i class="bi bi-cart-x"></i>
                </div>
                <p class="empty-state-title">No Orders Found</p>
                <p class="empty-state-text">
                    @if (Model.ConnectionStatus?.IsConnected != true)
                    {
                        @:Connect your eBay account in Settings to start syncing orders.
                    }
                    else
                    {
                        @:No orders found for the selected date range. Try adjusting your filters.
                    }
                </p>
                @if (Model.ConnectionStatus?.IsConnected == true)
                {
                    <form asp-action="SyncNow" method="post" class="d-inline">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-arrow-clockwise me-2"></i>Sync Orders from eBay
                        </button>
                    </form>
                }
                else
                {
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-plug me-2"></i>Connect eBay Account
                    </a>
                }
            </div>
        }
    </div>
</div>
